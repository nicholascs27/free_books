<h1><%= t("views.books.title")%></h1>

<div class="my-5">
  <%= link_to t("views.new"), new_book_path, class: "btn btn-success" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th><%= t("views.books.name") %></th>
      <th><%= t("views.books.genre_id") %></th>
      <th><%= t("views.books.author_id") %></th>
      <th><%= t("views.books.price") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.genre.name %></td>
        <td><%= book.author.name %></td>
        <td></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>