<p id="notice"><%= notice %></p>

<p>
  <strong><%= t("views.authors.name")%>:</strong>
  <%= @author.name %>
</p>

<p>
  <strong><%= t("views.authors.biography")%>:</strong>
  <%= @author.biography %>
</p>
<p>
  Medium:
  <%= image_tag(@author.avatar_url(:medium)) if @author.avatar %>
</p>

<%= link_to t("views.edit"), edit_author_path(@author) %> |
<%= link_to t("views.back"), authors_path %>

<br>
<hr>

<%if @author.books.any? %>
  <table class="table">
    <thead>
      <tr>
        <th><%= t("views.books.name") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @author.books.each do |author| %>
        <tr>
          <td><%= author.name %></td>
          <td><%= author.biography %></td>
          <td><%= link_to t("views.show"), author %></td>
          <td><%= link_to t("views.edit"), edit_author_path(author) %></td>
          <td><%= link_to t("views.destroy"), author, method: :delete, data: { confirm: t("views.are_you_sure") } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nenhum livro para esse Autor</p>
<% end %>


