<h1><%= t("views.genres.title")%></h1>

<div class="my-5">
  <%= link_to t("views.new"), new_genre_path, class: "btn btn-success" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th><%= t("views.genres.name") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to t("views.show"), genre %></td>
        <td><%= link_to t("views.edit"), edit_genre_path(genre) %></td>
        <td><%= link_to t("views.destroy"), genre_path(genre), method: :delete, data: { confirm: t("views.are_you_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @genres %>

<br>

